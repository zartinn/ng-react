{
    "$schema": "http://json-schema.org/schema",
    "title": "ng-serve-react",
    "description": "Used to serve react application using webpack and babel",
    "type": "object",
    "properties": {
        "webpackConfigPath": {
            "type": "string",
            "description": "Custom webpack configuration path relative to root of angular.json"
        },
        "babelConfigPath": {
            "type": "string",
            "description": "Path to your .babelrc relative to root of angular.json"
        },
        "port": {
            "type": "number",
            "description": "Port to listen on.",
            "default": 4200
        },
        "host": {
            "type": "string",
            "description": "Host to listen on.",
            "default": "localhost"
        },
        "open": {
            "type": "boolean",
            "description": "Opens the url in default browser.",
            "default": false,
            "alias": "o"
        },
        "liveReload": {
            "type": "boolean",
            "description": "Whether to reload the page on change, using live-reload.",
            "default": true
        },
        "watch": {
            "type": "boolean",
            "description": "Rebuild on change.",
            "default": true
        },
        "sourceMaps": {
            "description": "Output sourcemaps.",
            "type": "boolean",
            "default": true
        }
    },
    "additionalProperties": false
}

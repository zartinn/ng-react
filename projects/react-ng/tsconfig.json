/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "../../dist/react-ng",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "include": [
      "./src/builders/**/*.ts",
      "./src/schematics/**/*.ts"
  ],
  "exclude": [
    "./src/schematics/**/files/**/*.ts"
  ]
}
